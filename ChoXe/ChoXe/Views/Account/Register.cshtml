@model ChoXe.Models.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Đăng ký</title>
    <link rel="icon" type="image/icon" href="~/Assets/client/image/favicon.io.ico">
    <link href="~/Assets/client/css/style.css" rel="stylesheet">
    <link href="~/Assets/client/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Assets/client/css/form.css" rel="stylesheet" />
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <style>
        .login-bg {
            height: 450px;
        }

        x-ms-webview .form {
            width: 300px;
        }
        .separate{
            color: #808080;
        }
    </style>
</head>
<body>
    <div class="logo wrap">
        <a href="@Url.Action("Index","Home")"><img width="142" height="33" src="~/Assets/client/image/logo.png" /></a>
    </div>
    <div class="login-content">
        <div class="login-bg">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="email" class="form-label form-label--required">
                        Email: <span class="text-muted">(abc@email.com)</span>
                    </label>
                    <div class="form-addon" data-states-for="email">
                        <div class="form-addon__addon">
                            <span class="fa fa-envelope"></span>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-input" })
                        <span class="form-addon__icon icon-valid"></span> <span class="form-addon__icon icon-invalid"></span>
                    </div>
                    <span class="email-message"></span>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "email-mess" })
                </div>

                <div class="form-group">
                    <label for="username" class="form-label form-label--required">
                        Tài khoản:
                    </label>
                    <div class="form-addon" data-states-for="username">
                        <div class="form-addon__addon">
                            <span class="fa fa-user"></span>
                        </div>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-input" })
                        <span class="form-addon__icon icon-valid"></span> <span class="form-addon__icon icon-invalid"></span>
                    </div>
                    <div>
                        <span class="user-message"></span>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "user-mess" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label form-label--required">
                        Mật khẩu <span class="text-muted">(ít nhất 6 kí tự)</span>:
                    </label>
                    <div class="form-addon" data-states-for="password">
                        <div class="form-addon__addon">
                            <span class="fa fa-key"></span>
                        </div>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-input" })
                        <span class="form-addon__icon icon-valid"></span>
                        <span class="form-addon__icon icon-invalid"></span>
                    </div>
                    <span class="pass-message"></span>
                    <span>@TempData["ErrPass"]</span>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "pass-mess" })
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword" class="form-label form-label--required">
                        Nhập lại mật khẩu <span class="text-muted"></span>:
                    </label>
                    <div class="form-addon" data-states-for="password">
                        <div class="form-addon__addon">
                            <span class="fa fa-key"></span>
                        </div>
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-input" })
                        <span class="form-addon__icon icon-valid"></span>
                        <span class="form-addon__icon icon-invalid"></span>
                    </div>
                    <span class="repass-message"></span>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "repass-mess" })
                </div>
                <div class="form-footer">
                    <div class="forgot-pass">
                        <a href="@Url.Action("Login","Account")">Đăng nhập</a>
                    </div>
                    <input type="submit" class="button" id="register" value="Đăng ký">
                </div>
            }
        </div>
    </div>
    <!-- Bắt đầu footer -->
    <div class="footer">
        <a href="@Url.Action("Index","Home")">Trang chủ</a>
        <span class="separate">|</span>
        <a href="@Url.Action("Contact","Home")">Trợ giúp</a>
    </div>
    <!-- Kết Thúc footer -->
</body>
</html>
