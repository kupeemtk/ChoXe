@{
    ViewBag.Title = "Xác nhận mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        .containerNotify {
            min-height: 460px;
        }

        .imgWelcome {
            width: 47%;
            margin: auto;
            margin-top: 10px;
        }
        .contain {
            font-size: 14px;
            padding: 100px 0 0 50px;
            line-height: 18px;
        }

        .signup-message {
            margin: 20px auto;
            width: 600px;
            padding: 20px 30px 10px;
            font-size: 18px;
            text-align: center;
            line-height: 100%;
        }

        .val-success {
            background: #f4fcee;
            border: 2px solid #81CDB9;
        }

            .val-success .fa-check {
                display: block;
                margin: 0 auto 10px;
                color: #81CDB9;
                font-size: 22px;
            }

        .signup-message p {
            margin-bottom: 20px;
        }
        #loginLink{
            color: #81CDB9;
            text-decoration: underline;
        }
        #loginLink:hover{
            color: #FE9B96;
        }
        .imgWelcome {
            width: 40%;
            margin: auto;
            margin-bottom: 50px;
        }

            .imgWelcome img {
                width: 100%;
                height: 300px;
            }
    </style>

<div class="containerNotify">
    <div class="contain">
        <div class="signup-message val-success">
            <p>Mật khẩu của bạn đã được thay đổi. @Html.ActionLink("Nhấn vào đây để đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
        </div>
    </div>
    <div class="imgWelcome">
        <img src="~/Assets/client/image/cutecar.jpg" />
    </div>
</div>
