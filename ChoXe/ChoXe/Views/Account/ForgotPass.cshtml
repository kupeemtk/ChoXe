@model ChoXe.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/Assets/admin/bootstrap/css/bootstrap.min.css" />
    <style>
        .container-wrap {
            min-height: 430px;
            padding-top: 150px;
            padding-bottom: 40px;
        }
        .text-danger{
            color: red;
        }
        .btn-block{
            background: #81CDB9;
            color: #fff;
        }
        .btn-block:hover{
            color: #FEB6B2;
        }
    </style>

}

<div class="container-wrap">
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <h3><i class="fa fa-lock fa-4x"></i></h3>
                                <h2 class="text-center">Quên mật khẩu?</h2>
                                <p>Nhập email của bạn để khôi phục mật khẩu.</p>
                                <div class="panel-body">

                                    @using (Html.BeginForm("ForgotPass", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <fieldset>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                </div>
                                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <input class="btn btn-block btn-lg" value="Đặt lại mật khẩu" type="submit">
                                            </div>
                                        </fieldset>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
