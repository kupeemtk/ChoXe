@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/Assets/client/css/productdetail.css">
    <link rel="stylesheet" href="~/Assets/client/css/car.css">
}
@using ChoXe.Models
@model IEnumerable<ChoXe.Models.ChiTietXe>
